<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="0,0,-8,0">
        <TabControl HorizontalAlignment="Left" Height="409" VerticalAlignment="Top" Width="590" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Customer" Width="130" Height="22" Margin="0,-2,0,0" VerticalAlignment="Bottom">
                <Grid x:Name="CustomerTab" Background="#FFE5E5E5" Margin="0,5,0,-5">
                    <TabControl x:Name="BookingTab" HorizontalAlignment="Left" Width="584" Margin="0,0,0,70">
                        <TabItem Header="Registration" Width="150" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <TextBox HorizontalAlignment="Left" Height="23" Margin="162,155,0,0" TextWrapping="Wrap" Text="0705268299" VerticalAlignment="Top" Width="85"/>
                                <TextBox x:Name="CountryCodeTextBox" HorizontalAlignment="Left" Height="23" Margin="127,155,0,0" TextWrapping="Wrap" Text="+46" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.552,1.937"/>
                                <Button x:Name="NextRegistrationButton" Content="Next" HorizontalAlignment="Left" Height ="23" Margin="252,155,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                                <Label x:Name="PhonenumberLabel" Content="PhoneNumber" HorizontalAlignment="Left" Margin="0,155,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.442,-1.286"/>
                                <TextBox x:Name="CreditCardNoTextBox" HorizontalAlignment="Left" Height="23" Margin="127,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.534,0.106"/>
                                <Label x:Name="CreditCardLabel" Content="CreditCard.No" HorizontalAlignment="Left" Margin="0,124,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="LastnameTextbox" HorizontalAlignment="Left" Height="23" Margin="125,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="Lastnamelabel" Content="Lastname" HorizontalAlignment="Left" Margin="2,93,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="23" Margin="125,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="Firstnamelabel" Content="Firstname" HorizontalAlignment="Left" Margin="2,62,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="EmailTextbox" HorizontalAlignment="Left" Height="23" Margin="125,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Button x:Name="SearchCustomer" Content="Search" HorizontalAlignment="Left" Height="23" Margin="250,34,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
                                <Label x:Name="EmailLabel" Content="Email" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,2.188" Width="120"/>
                                <GridSplitter HorizontalAlignment="Left" Height="110" Margin="58,-28,0,0" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5">
                                    <GridSplitter.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="89.209"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </GridSplitter.RenderTransform>
                                </GridSplitter>
                                <Label x:Name="NewCustomerLabel" Content="New Customer" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Top" Width="120"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Reservation" Width="150" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <Label Content="Hej" HorizontalAlignment="Left" Margin="91,84,0,0" VerticalAlignment="Top"/>
                                <Button x:Name="BackReservation" Content="Back" HorizontalAlignment="Left" Margin="10,253,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
                                <Button x:Name="NextReservationButton" Content="Next" HorizontalAlignment="Left" Margin="493,253,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Receipt" HorizontalAlignment="Left" Width="146" IsEnabled="False" Margin="1,0,-1,0">
                            <Grid Background="#FFE5E5E5">
                                <Label Content="KVITTO" HorizontalAlignment="Left" Margin="103,146,0,0" VerticalAlignment="Top"/>
                                <Button x:Name="BackReciept" Content="Back" HorizontalAlignment="Left" Margin="414,217,0,0" VerticalAlignment="Top" Width="75" Click="BackReciept_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Reservation" Width="130">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="CustomerTextBox" HorizontalAlignment="Left" Height="25" Margin="80,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
                    <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="175,14,0,0" VerticalAlignment="Top" Width="45" Height="25"/>
                    <Label x:Name="CustomerLabel" Content="Customer" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.974,-3.231" Width="65"/>
                    <Label Content="Roomtype" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="customerDataGrid" HorizontalAlignment="Left" Height="114" Margin="20,44,0,0" VerticalAlignment="Top" Width="200"/>
                    <ComboBox x:Name="Roomtype" HorizontalAlignment="Left" Margin="100,167,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Single Bed"/>
                        <ComboBoxItem Content="Double Bed"/>
                    </ComboBox>
                    <Button Content="Next" HorizontalAlignment="Left" Margin="499,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Back" HorizontalAlignment="Left" Margin="10,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <DatePicker x:Name="ReservationFromDate" HorizontalAlignment="Left" Margin="100,213,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                    <Label x:Name="FromDateLabel" Content="From date:" HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top" Width="75"/>
                    <DatePicker HorizontalAlignment="Left" Margin="100,253,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="ToDateLabel" Content="To date:" HorizontalAlignment="Left" Margin="10,253,0,0" VerticalAlignment="Top" Width="65"/>
                </Grid>
            </TabItem>
            <TabItem Header="Room" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="CustomerRegistry" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
