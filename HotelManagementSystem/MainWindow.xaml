<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ViewModel="clr-namespace:HotelManagementSystem"
        xmlns:View="clr-namespace:HotelManagementSystem"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="0,0,-8,0">
        <TabControl HorizontalAlignment="Left" Height="409" VerticalAlignment="Top" Width="590" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="CustomerTab1" Header="Reservation" Width="130">
                <Grid x:Name="CustomerTab" Background="#FFE5E5E5" Margin="0,5,0,-5">
                    <TabControl x:Name="BookingTab" HorizontalAlignment="Left" Width="584">
                        <TabItem x:Name="RegistrationTab" Header="Search customer" Width="150" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <TextBox x:Name="PhoneNoTextBox" HorizontalAlignment="Left" Height="23" Margin="162,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
                                <TextBox x:Name="PhoneCountryCodeTextBox" HorizontalAlignment="Left" Height="23" Margin="127,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.552,1.937"/>
                                <Button x:Name="NextRegistrationButton" Content="Next" HorizontalAlignment="Left" Height ="23" Margin="493,320,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                                <Label x:Name="PhonenumberLabel" Content="PhoneNumber" HorizontalAlignment="Left" Margin="0,155,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.442,-1.286"/>
                                <TextBox x:Name="CreditCardNoTextBox" HorizontalAlignment="Left" Height="23" Margin="127,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.534,0.106"/>
                                <Label x:Name="CreditCardLabel" Content="CreditCard.No" HorizontalAlignment="Left" Margin="0,124,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="LastnameTextbox" HorizontalAlignment="Left" Height="23" Margin="125,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="Lastnamelabel" Content="Lastname" HorizontalAlignment="Left" Margin="2,93,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="23" Margin="125,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="Firstnamelabel" Content="Firstname" HorizontalAlignment="Left" Margin="2,62,0,0" VerticalAlignment="Top" Width="120"/>
                                <TextBox x:Name="EmailTextbox" HorizontalAlignment="Left" Height="23" Margin="125,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Button x:Name="SearchCustomer" Content="Search" HorizontalAlignment="Left" Height="23" Margin="250,34,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
                                <Label x:Name="EmailLabel" Content="Email" HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,2.188" Width="120"/>
                                <GridSplitter HorizontalAlignment="Left" Height="110" Margin="58,-28,0,0" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5">
                                    <GridSplitter.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="89.209"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </GridSplitter.RenderTransform>
                                </GridSplitter>
                                <Label x:Name="NewCustomerLabel" Content="New Customer" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Top" Width="120"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="ReservationTab" Header="Reservation" Width="150" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <Button x:Name="BackReservation" Content="Back" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
                                <Button x:Name="NextReservationButton" Content="Confirm" HorizontalAlignment="Left" Margin="493,323,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
                                <Label x:Name="ReservationCustomerLabel" Content="Customer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
                                <Label x:Name="RoomtypeLabelReservation" Content="Roomtype" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="ComboBoxReservation" HorizontalAlignment="Left" Margin="80,167,0,0" VerticalAlignment="Top" Width="120">
                                    <ComboBoxItem Content="Double Room"/>
                                    <ComboBoxItem Content="Single Room"/>
                                </ComboBox>
                                <Label x:Name="FromDateLabel" Content="From Date:" HorizontalAlignment="Left" Margin="10,208,0,0" VerticalAlignment="Top" Width="70"/>
                                <Label x:Name="ToDateLabel" Content="To Date:" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="70"/>
                                <DatePicker x:Name="FromDateDatepicker" HorizontalAlignment="Left" Margin="80,208,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <DatePicker x:Name="ToDateDatepicker" HorizontalAlignment="Left" Margin="80,241,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <Label x:Name="AvalibleRoomsLabel" Content="Avalible Rooms" HorizontalAlignment="Left" Margin="292,10,0,0" VerticalAlignment="Top" Width="146"/>
                                <DataGrid x:Name="RoomInfoGrid" HorizontalAlignment="Left" Margin="292,41,0,0" VerticalAlignment="Top" Height="224" Width="245"/>
                                <Label Content="Behöver vi ett roomNO?" HorizontalAlignment="Left" Margin="254,304,0,0" VerticalAlignment="Top" Width="144"/>
                                <TextBox x:Name="ReservationFirstnametextbox" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" IsEnabled="False"/>
                                <TextBox x:Name="ReservationLastNameTextbox" HorizontalAlignment="Left" Height="23" Margin="125,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" IsEnabled="False"/>
                                <TextBox x:Name="ReservationEmailTextBox" HorizontalAlignment="Left" Height="23" Margin="10,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" IsEnabled="False"/>
                                <Label x:Name="ReservationEmailLabel" Content="Email" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>

                            </Grid>
                        </TabItem>
                        <TabItem x:Name="RecieptTab" Header="Receipt" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="146" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <Button x:Name="BackReciept" Content="Done" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="75" Click="BackReciept_Click"/>
                                <DataGrid x:Name="RecieptDatagrid" HorizontalAlignment="Left" Height="200" Margin="80,61,0,0" Width ="400" VerticalAlignment="Top"/>
                                <Label x:Name="CustomerRecieptLabel" Content="Customer reciept" HorizontalAlignment="Left" Margin="80,30,0,0" VerticalAlignment="Top" Width="151"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="ReservationTab1" Header="Reservation" Width="130">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="CustomerTextBox" HorizontalAlignment="Left" Height="25" Margin="90,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
                    <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="185,14,0,0" VerticalAlignment="Top" Width="45" Height="25"/>
                    <Label x:Name="ReservationLabel" Content="Reservation" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.974,-3.231" Width="75"/>
                    <Label Content="Roomtype" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="Roomtype" HorizontalAlignment="Left" Margin="100,167,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Single Bed"/>
                        <ComboBoxItem Content="Double Bed"/>
                    </ComboBox>
                    <Button Content="Next" HorizontalAlignment="Left" Margin="499,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Back" HorizontalAlignment="Left" Margin="10,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <Label Content="Checkouthär kanske?:D" HorizontalAlignment="Left" Margin="282,284,0,0" VerticalAlignment="Top" Width="205"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="RoomTab" Header="Room" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="CustomerRegistryTab" Header="CustomerRegistry" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
