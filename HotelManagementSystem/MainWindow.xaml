<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ViewModel="clr-namespace:HotelManagementSystem"
        xmlns:View="clr-namespace:HotelManagementSystem"
        Title="MainWindow" Height="450" Width="600">
    <Grid Margin="0,0,-8,0">
        <TabControl HorizontalAlignment="Left" Height="409" VerticalAlignment="Top" Width="590" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="CustomerTab1" Header="Reservation" Width="130">
                <Grid x:Name="CustomerTab" Background="#FFE5E5E5" Margin="0,5,0,-5">
                    <TabControl x:Name="BookingTab" HorizontalAlignment="Left" Width="584">
                        <TabItem x:Name="AvailabilityTab" Header="Availability" Width="150" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <Button x:Name="NextRegistrationButton" Content="Next" HorizontalAlignment="Left" Height ="23" Margin="493,320,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                                <Label x:Name="RoomtypeLabelReservation" Content="Roomtype" HorizontalAlignment="Left" Margin="5,41,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="ComboBoxReservation" HorizontalAlignment="Left" Margin="75,45,0,0" VerticalAlignment="Top" Width="120">
                                    <ComboBoxItem Content="Double Room"/>
                                    <ComboBoxItem Content="Single Room"/>
                                </ComboBox>
                                <Label x:Name="FromDateLabel" Content="From Date:" HorizontalAlignment="Left" Margin="0,115,0,0" VerticalAlignment="Top" Width="70"/>
                                <Label x:Name="ToDateLabel" Content="To Date:" HorizontalAlignment="Left" Margin="0,146,0,0" VerticalAlignment="Top" Width="70"/>
                                <DatePicker x:Name="FromDateDatepicker" HorizontalAlignment="Left" Margin="75,115,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <DatePicker x:Name="ToDateDatepicker" HorizontalAlignment="Right" Margin="0,144,383,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <Label x:Name="AvalibleRoomsLabel" Content="Avalible Rooms" HorizontalAlignment="Left" Margin="200,14,0,0" VerticalAlignment="Top" Width="146"/>
                                <DataGrid x:Name="RoomInfoGrid" HorizontalAlignment="Left" Margin="200,45,0,0" VerticalAlignment="Top" Height="224" Width="245"/>
                                <Button x:Name="CheckAvailabilityButton" Content="Check Availability" HorizontalAlignment="Left" Margin="95,173,0,0" VerticalAlignment="Top" Width="100"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="ReservationTab" Header="Reservation" Width="150" IsEnabled="False" HorizontalAlignment="Left" Margin="0,-2,0,0">
                            <Grid Background="#FFE5E5E5">
                                <Button x:Name="BackReservation" Content="Back" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
                                <Button x:Name="NextReservationButton" Content="Confirm" HorizontalAlignment="Left" Margin="493,323,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
                                <Label x:Name="ReservationCustomerLabel" Content="Customer" HorizontalAlignment="Left" Margin="55,107,0,0" VerticalAlignment="Top" Width="100"/>
                                <Label x:Name="RoomtypeLabelReservation_clone" Content="Roomtype" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="ComboBoxReservation_clone" HorizontalAlignment="Left" Margin="75,14,0,0" VerticalAlignment="Top" Width="120">
                                    <ComboBoxItem Content="Double Room"/>
                                    <ComboBoxItem Content="Single Room"/>
                                </ComboBox>
                                <Label x:Name="FromDateLabel_clone" Content="From Date:" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="70"/>
                                <Label x:Name="ToDateLabel_clone" Content="To Date:" HorizontalAlignment="Left" Margin="5,72,0,0" VerticalAlignment="Top" Width="70"/>
                                <DatePicker x:Name="FromDateDatepicker_clone" HorizontalAlignment="Left" Margin="75,41,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <DatePicker x:Name="ToDateDatepicker_clone" HorizontalAlignment="Left" Margin="75,70,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" Width="120"/>
                                <Label x:Name="AvalibleRoomsLabel_clone" Content="Avalible Rooms" HorizontalAlignment="Left" Margin="292,10,0,0" VerticalAlignment="Top" Width="146"/>
                                <DataGrid x:Name="RoomInfoGrid_clone" HorizontalAlignment="Left" Margin="292,41,0,0" VerticalAlignment="Top" Height="224" Width="245"/>
                                <Label Content="Behöver vi ett roomNO?" HorizontalAlignment="Left" Margin="254,304,0,0" VerticalAlignment="Top" Width="144"/>
                                <TextBox x:Name="EmailTextbox" HorizontalAlignment="Left" Height="23" Margin="95,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="EmailLabel_Copy" Content="Email" HorizontalAlignment="Left" Margin="0,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.55,2.188" Width="90"/>
                                <Label x:Name="Firstnamelabel_Copy" Content="Firstname" HorizontalAlignment="Left" Margin="0,161,0,0" VerticalAlignment="Top" Width="90"/>
                                <TextBox x:Name="FirstNameTextBox" HorizontalAlignment="Left" Height="23" Margin="95,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="Lastnamelabel_Copy" Content="Lastname" HorizontalAlignment="Left" Margin="0,189,0,0" VerticalAlignment="Top" Width="90"/>
                                <TextBox x:Name="LastnameTextbox" HorizontalAlignment="Left" Height="23" Margin="95,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label x:Name="CreditCardLabel_Copy" Content="CreditCard.No" HorizontalAlignment="Left" Margin="0,215,0,0" VerticalAlignment="Top" Width="90"/>
                                <TextBox x:Name="CreditCardNoTextBox" HorizontalAlignment="Left" Height="23" Margin="95,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.534,0.106"/>
                                <Label x:Name="PhonenumberLabel_Copy" Content="PhoneNumber" HorizontalAlignment="Left" Margin="0,246,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.442,-1.286"/>
                                <TextBox x:Name="PhoneCountryCodeTextBox" HorizontalAlignment="Left" Height="23" Margin="95,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.552,1.937"/>
                                <TextBox x:Name="PhoneNoTextBox" HorizontalAlignment="Left" Height="23" Margin="130,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
                                <Button x:Name="SearchCustomer" Content="Search" HorizontalAlignment="Left" Height="23" Margin="220,133,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click_1"/>

                            </Grid>
                        </TabItem>
                        <TabItem x:Name="RecieptTab" Header="Receipt" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="146" IsEnabled="False">
                            <Grid Background="#FFE5E5E5">
                                <Button x:Name="BackReciept" Content="Done" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="75" Click="BackReciept_Click"/>
                                <DataGrid x:Name="RecieptDatagrid" HorizontalAlignment="Left" Height="200" Margin="80,61,0,0" Width ="400" VerticalAlignment="Top"/>
                                <Label x:Name="CustomerRecieptLabel" Content="Customer reciept" HorizontalAlignment="Left" Margin="80,30,0,0" VerticalAlignment="Top" Width="151"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="ReservationTab1" Header="Reservation" Width="130">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="CustomerTextBox" HorizontalAlignment="Left" Height="25" Margin="90,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
                    <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="185,14,0,0" VerticalAlignment="Top" Width="45" Height="25"/>
                    <Label x:Name="ReservationLabel" Content="Reservation" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.974,-3.231" Width="75"/>
                    <Label Content="Roomtype" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="Roomtype" HorizontalAlignment="Left" Margin="100,167,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Single Bed"/>
                        <ComboBoxItem Content="Double Bed"/>
                    </ComboBox>
                    <Button Content="Next" HorizontalAlignment="Left" Margin="499,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Back" HorizontalAlignment="Left" Margin="10,351,0,0" VerticalAlignment="Top" Width="75"/>
                    <Label Content="Checkouthär kanske?:D" HorizontalAlignment="Left" Margin="282,284,0,0" VerticalAlignment="Top" Width="205"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="RoomTab" Header="Room" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="RoomsLabel" Content="Rooms" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="65"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="80,45,0,0" TextWrapping="Wrap" Text="Autogenererat?" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="RoomNoLabel" Content="RoomsNo" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="65"/>
                    <Label x:Name="RoomtypeLabel" Content="Roomtype" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="65"/>
                    <Label x:Name="PricePerDayLabel" Content="Price/Day" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="65"/>
                    <Label x:Name="MaxPersonLabel" Content="Beds" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="65"/>
                    <TextBox x:Name="PricePerDayTextBox" HorizontalAlignment="Left" Height="23" Margin="80,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="MaxPersonTextBox" HorizontalAlignment="Left" Height="23" Margin="80,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <ComboBox x:Name="RoomTypeComboBox" HorizontalAlignment="Left" Margin="80,73,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="RoomTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Single Bed"/>
                        <ComboBoxItem Content="Double Bed"/>
                    </ComboBox>
                    <Button x:Name="RoomSearchButton" Content="Search" HorizontalAlignment="Left" Margin="205,45,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="CustomerRegistryTab" Header="CustomerRegistry" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
